DELIMITER $$

CREATE PROCEDURE p_find_s_category_by_space_no(
	IN v_space_no INT(11)
)
BEGIN
	SELECT s_category_name FROM s_categoryt WHERE s_category_no = ( SELECT s_category_no FROM SpaceT
	WHERE space_no=v_space_no);
END$$

